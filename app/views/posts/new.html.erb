<h1>新しい投稿</h1>

<%= form_with(model: @post, class: "form-container") do |f| %>
  <div class="form-input">
    <%= f.label :title, "タイトル" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-input">
    <%= f.label :content, "投稿内容" %>
    <%= f.text_area :content %>
  </div>
  <div class="button-container"><%= f.submit "投稿", class: "link-button" %></div>
<% end %>